package skynet;

import geometry.IntPoint;

public class Object {
	private IntPoint point;
	private int radius;
	
	Object(IntPoint p, int r){
		point=p;
		radius=r;
	}
	
	Object(int x,int y){
		point=new IntPoint(x,y);
		radius=r;
	}
	
	public int getX(){
		return point.x;
	}
	
	public int getY(){
		return point.y;
	}
	
	public int getRadius(){
		return radius;
	}
	
	public void setX(int x){
		point.x=x;
	}
	
	public void setY(int y){
		point.y=y;
	}
	
	public void setRadius(int r){
		radius=r;
	}
	
	public boolean didCollide(int x,int y){
		if(point.x==x && point.y==y) return true;
		return false;
	}
}
